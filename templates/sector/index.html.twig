{% extends 'base.html.twig' %}

{% block title %}Sector index{% endblock %}

{% block body %}
<div class="container">
    <h1>Listado de sectores</h1>
    <h6>Total: {{ pagination.getTotalItemCount }} </h6>
    <table class="table table table-dark table-striped">
        <thead>
            <tr>
                <th{% if pagination.isSorted('s.id') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Id', 's.id') }}
                </th>
                <th{% if pagination.isSorted(['s.nombre']) %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Nombre', 's.nombre') }}
                </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {# table body #}
        {% for article in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ article.id }}</td>
                <td>{{ article.nombre }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('sector_edit', {'id': article.id}) }}">edit</a>

                    <form method="post" action="{{ path('sector_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        
        {% endfor %}
        </tbody>
        <div class="row justify-content-between mb-2">
            <a class="btn btn-success" href="{{ path('sector_new') }}">Create new</a>
            <a class="btn btn-info" href="{{ path('home') }}">Home</a>
        <div>
    </table>
    
    {% if error %}
        <script>alert("El sector que intenta borrar tiene empresas asignadas, cambie el sector de las empresas y vuelva a intentarlo");</script>
    {% endif %}
</div>
{% endblock %}
